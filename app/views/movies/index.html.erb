<div style="background:#33FF99 !important" class="jumbotron">
<center><img src="tomatologo.png" alt="logo" align="middle"></center>
<br></br>
<div style="background:#E8E8E8 !important" class="panel panel-default">
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>
</br>
  <p id="notice"><%= notice %></p>
</br>
  <tbody>
  <% if user_signed_in? %>
    <% @movies.each do |movie| %>
        <h4><span class="glyphicon glyphicon-play" aria-hidden="true"></span> <%= link_to movie[:title], movie%> - <%= movie.rating %></h4>
        <%= link_to 'Edit', edit_movie_path(movie) %> |
        <%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %>
        <br></br>
    <% end %>
  <% else %>
    <center> <p> Welcome to TomatoSmack! The app that lets you rate your favorite movies and compare your ratings to top critics. Start by signing up or check out our github page linked here. </p></center>
  <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
  <h5><span class="glyphicon glyphicon-cloud-upload" aria-hidden="true"></span> <%= link_to 'Add a Movie', new_movie_path %></h5>
<% end %>
</div>
</div>
