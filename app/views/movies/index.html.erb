<p id="notice"><%= notice %></p>

<h1>TomatoSmack!</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% if user_signed_in? %>
    <% @movies.each do |movie| %>
        <%= link_to movie[:title], movie %>
        <br />
        <%= link_to 'Edit', edit_movie_path(movie) %> |
        <%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %>
        <br></br>
    <% end %>
  <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
  <%= link_to 'Add a Movie', new_movie_path %>
<% end %>
